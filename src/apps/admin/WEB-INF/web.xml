<!--
  ** WebApp for Admin.
  ** @author Matthias L. Jugel
  ** @version $Id$
  -->
<web-app>
  <display-name>SnipSnap Admin</display-name>

  <servlet>
    <servlet-name>com.neotis.admin.AdminServlet</servlet-name>
    <servlet-class>com.neotis.admin.AdminServlet</servlet-class>
  </servlet>

  <servlet>
    <servlet-name>com.neotis.admin.Application</servlet-name>
    <servlet-class>com.neotis.admin.Application</servlet-class>
  </servlet>

  <servlet-mapping>
    <servlet-name>com.neotis.admin.AdminServlet</servlet-name>
    <url-pattern>/</url-pattern>
  </servlet-mapping>

  <servlet-mapping>
    <servlet-name>com.neotis.admin.Application</servlet-name>
    <url-pattern>/exec/app</url-pattern>
  </servlet-mapping>

