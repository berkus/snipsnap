<?xml version="1.0" encoding="iso-8859-1"?>

<!DOCTYPE web-app PUBLIC "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN"
 "http://java.sun.com/j2ee/dtds/web-app_2_3.dtd">

<!--
  ** Web application configuration.
  ** @author Matthias L. Jugel
  ** @version $Id$
  -->
<web-app>
  <display-name>Snip</display-name>

  <servlet>
    <servlet-name>com.neotis.net.Layouter</servlet-name>
    <servlet-class>com.neotis.net.Layouter</servlet-class>
  </servlet>

  <servlet>
    <servlet-name>com.neotis.net.SnipStoreServlet</servlet-name>
    <servlet-class>com.neotis.net.SnipStoreServlet</servlet-class>
  </servlet>

  <servlet>
    <servlet-name>com.neotis.net.NewUserServlet</servlet-name>
    <servlet-class>com.neotis.net.NewUserServlet</servlet-class>
  </servlet>

  <servlet>
    <servlet-name>com.neotis.net.LoginServlet</servlet-name>
    <servlet-class>com.neotis.net.LoginServlet</servlet-class>
  </servlet>

  <servlet-mapping>
    <servlet-name>com.neotis.net.Layouter</servlet-name>
    <url-pattern>/space/*</url-pattern>
  </servlet-mapping>

  <servlet-mapping>
    <servlet-name>com.neotis.net.Layouter</servlet-name>
    <url-pattern>/exec/*</url-pattern>
  </servlet-mapping>

  <servlet-mapping>
    <servlet-name>com.neotis.net.SnipStoreServlet</servlet-name>
    <url-pattern>/exec/store</url-pattern>
  </servlet-mapping>

  <servlet-mapping>
    <servlet-name>com.neotis.net.NewUserServlet</servlet-name>
    <url-pattern>/exec/newuser</url-pattern>
  </servlet-mapping>

  <servlet-mapping>
    <servlet-name>com.neotis.net.LoginServlet</servlet-name>
    <url-pattern>/exec/authenticate</url-pattern>
  </servlet-mapping>


</web-app>